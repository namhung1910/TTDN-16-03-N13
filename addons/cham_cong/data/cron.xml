<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Scheduled Action: Auto Mark Absent for Missed Shifts -->
    <record id="ir_cron_auto_mark_absent" model="ir.cron">
        <field name="name">Chấm Công: Tự Động Đánh Vắng Mặt</field>
        <field name="model_id" ref="model_bang_cham_cong"/>
        <field name="state">code</field>
        <field name="code">model.auto_mark_absent_for_missed_shifts()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall">False</field>
        <field name="active">True</field>
        <!-- Run at 23:00 every day (Vietnam time) -->
        <field name="nextcall" eval="(datetime.now() + timedelta(days=1)).replace(hour=16, minute=0, second=0)"/>
        <!-- Note: 23:00 VN = 16:00 UTC -->
    </record>
</odoo>
