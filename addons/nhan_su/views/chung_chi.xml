<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- FORM -->
    <record id="view_chung_chi_form" model="ir.ui.view">
      <field name="name">chung_chi.form</field>
      <field name="model">chung_chi</field>
      <field name="arch" type="xml">
        <form string="Chứng chỉ">
          <sheet>
            <group col="4">
              <field name="name"/>
              <field name="ma_chung_chi"/>
              <field name="noi_cap"/>
              <field name="nhan_vien_id"/>

              <field name="ngay_cap"/>
              <field name="ngay_het_han"/>
              <field name="ghi_chu" colspan="4"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- TREE -->
    <record id="view_chung_chi_tree" model="ir.ui.view">
      <field name="name">chung_chi.tree</field>
      <field name="model">chung_chi</field>
      <field name="arch" type="xml">
        <tree string="Chứng chỉ">
          <field name="name"/>
          <field name="ma_chung_chi"/>
          <field name="nhan_vien_id"/>
          <field name="noi_cap"/>
          <field name="ngay_cap"/>
          <field name="ngay_het_han"/>
        </tree>
      </field>
    </record>

    <!-- SEARCH -->
    <record id="view_chung_chi_search" model="ir.ui.view">
      <field name="name">chung_chi.search</field>
      <field name="model">chung_chi</field>
      <field name="arch" type="xml">
        <search string="Tìm chứng chỉ">
          <field name="name"/>
          <field name="ma_chung_chi"/>
          <field name="nhan_vien_id"/>
          <field name="noi_cap"/>
        </search>
      </field>
    </record>

    <!-- ACTION -->
    <record id="action_chung_chi" model="ir.actions.act_window">
      <field name="name">Chứng chỉ</field>
      <field name="res_model">chung_chi</field>
      <field name="view_mode">tree,form</field>
      <field name="search_view_id" ref="view_chung_chi_search"/>
    </record>

  </data>
</odoo>