<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_bang_luong_tree" model="ir.ui.view">
        <field name="name">bang.luong.tree</field>
        <field name="model">bang_luong</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="thang"/>
                <field name="nam"/>
                <field name="so_nhan_vien"/>
                <field name="tong_luong_net" widget="monetary"/>
                <field name="trang_thai" widget="badge" 
                       decoration-info="trang_thai == 'nhap'" 
                       decoration-primary="trang_thai == 'da_tinh'"
                       decoration-success="trang_thai == 'da_duyet'"
                       decoration-muted="trang_thai == 'da_thanh_toan'"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_bang_luong_form" model="ir.ui.view">
        <field name="name">bang.luong.form</field>
        <field name="model">bang_luong</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_tao_chi_tiet_luong" string="Tạo Chi Tiết Lương" 
                            type="object" class="btn-primary" 
                            attrs="{'invisible': [('trang_thai', '!=', 'nhap')]}"
                            help="Tạo chi tiết lương cho tất cả nhân viên"/>
                    <button name="action_xac_nhan" string="Xác Nhận Tính Lương" 
                            type="object" class="btn-primary" 
                            attrs="{'invisible': [('trang_thai', '!=', 'nhap')]}"/>
                    <button name="action_duyet" string="Duyệt" 
                            type="object" class="btn-success" 
                            attrs="{'invisible': [('trang_thai', '!=', 'da_tinh')]}"/>
                    <button name="action_thanh_toan" string="Thanh Toán" 
                            type="object" class="btn-success" 
                            attrs="{'invisible': [('trang_thai', '!=', 'da_duyet')]}"/>
                    <button name="action_quay_lai_nhap" string="Quay Lại Nháp" 
                            type="object" 
                            attrs="{'invisible': [('trang_thai', 'not in', ['da_tinh', 'da_duyet'])]}"/>
                    <field name="trang_thai" widget="statusbar" 
                           statusbar_visible="nhap,da_tinh,da_duyet,da_thanh_toan"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Thông Tin Kỳ Lương">
                            <field name="thang" attrs="{'readonly': [('trang_thai', '!=', 'nhap')]}"/>
                            <field name="nam" attrs="{'readonly': [('trang_thai', '!=', 'nhap')]}"/>
                            <field name="ngay_tinh"/>
                            <field name="ngay_cham"/>
                        </group>
                        <group string="Tổng Kết">
                            <field name="so_nhan_vien"/>
                            <field name="tong_luong_gross" widget="monetary"/>
                            <field name="tong_bao_hiem" widget="monetary"/>
                            <field name="tong_thue" widget="monetary"/>
                            <field name="tong_luong_net" widget="monetary" 
                                   style="font-weight: bold; font-size: 1.2em;"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Chi Tiết Lương" name="chi_tiet">
                            <field name="chi_tiet_luong_ids" 
                                   attrs="{'readonly': [('trang_thai', 'in', ['da_duyet', 'da_thanh_toan'])]}">
                                <tree editable="bottom">
                                    <field name="nhan_vien_id"/>
                                    <field name="tong_ngay_cong"/>
                                    <field name="luong_chinh" widget="monetary" sum="Total"/>
                                    <field name="phu_cap_an_trua" widget="monetary"/>
                                    <field name="phu_cap_khac" widget="monetary"/>
                                    <field name="tong_thu_nhap" widget="monetary" sum="Total"/>
                                    <field name="tong_bao_hiem" widget="monetary" sum="Total"/>
                                    <field name="thue_tncn" widget="monetary" sum="Total"/>
                                    <field name="luong_thuc_nhan" widget="monetary" sum="Total" 
                                           decoration-bf="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Ghi Chú" name="ghi_chu">
                            <field name="ghi_chu"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_bang_luong_search" model="ir.ui.view">
        <field name="name">bang.luong.search</field>
        <field name="model">bang_luong</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="thang"/>
                <field name="nam"/>
                <filter string="Nháp" name="filter_nhap" domain="[('trang_thai', '=', 'nhap')]"/>
                <filter string="Đã tính" name="filter_da_tinh" domain="[('trang_thai', '=', 'da_tinh')]"/>
                <filter string="Đã duyệt" name="filter_da_duyet" domain="[('trang_thai', '=', 'da_duyet')]"/>
                <group expand="0" string="Group By">
                    <filter string="Tháng" name="group_thang" context="{'group_by': 'thang'}"/>
                    <filter string="Năm" name="group_nam" context="{'group_by': 'nam'}"/>
                    <filter string="Trạng thái" name="group_trang_thai" context="{'group_by': 'trang_thai'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_bang_luong" model="ir.actions.act_window">
        <field name="name">Bảng Lương</field>
        <field name="res_model">bang_luong</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo bảng lương mới
            </p>
            <p>
                Tạo bảng lương cho tháng, hệ thống sẽ tự động tính lương dựa trên dữ liệu chấm công.
            </p>
        </field>
    </record>
</odoo>
