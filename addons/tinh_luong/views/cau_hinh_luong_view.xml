<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_cau_hinh_luong_tree" model="ir.ui.view">
        <field name="name">cau.hinh.luong.tree</field>
        <field name="model">cau_hinh_luong</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="thang"/>
                <field name="nam"/>
                <field name="bac_1_thue_suat" string="Bậc 1 (%)"/>
                <field name="tong_ty_le_bao_hiem"/>
                <field name="giam_tru_gia_canh" widget="monetary"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_cau_hinh_luong_form" model="ir.ui.view">
        <field name="name">cau.hinh.luong.form</field>
        <field name="model">cau_hinh_luong</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_duplicate_to_next_month" 
                            string="Nhân Bản Sang Tháng Sau" 
                            type="object" 
                            class="btn-primary"
                            help="Sao chép cấu hình này sang tháng tiếp theo"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <field name="active" widget="boolean_button"
                               options="{'terminology': 'active'}"/>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Kỳ Áp Dụng">
                            <field name="thang"/>
                            <field name="nam"/>
                        </group>
                        <group string="Ngày Công">
                            <field name="so_ngay_cong_chuan"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Thuế TNCN - Biểu Lũy Tiến 5 Bậc" name="thue">
                            <group>
                                <group string="Bậc 1 (≤ 10 triệu)">
                                    <field name="bac_1_nguong" widget="monetary"/>
                                    <field name="bac_1_thue_suat"/>
                                </group>
                            </group>
                            <group>
                                <group string="Bậc 2 (10tr - 30tr)">
                                    <field name="bac_2_nguong" widget="monetary"/>
                                    <field name="bac_2_thue_suat"/>
                                    <field name="bac_2_tru" widget="monetary"/>
                                </group>
                                <group string="Bậc 3 (30tr - 60tr)">
                                    <field name="bac_3_nguong" widget="monetary"/>
                                    <field name="bac_3_thue_suat"/>
                                    <field name="bac_3_tru" widget="monetary"/>
                                </group>
                            </group>
                            <group>
                                <group string="Bậc 4 (60tr - 100tr)">
                                    <field name="bac_4_nguong" widget="monetary"/>
                                    <field name="bac_4_thue_suat"/>
                                    <field name="bac_4_tru" widget="monetary"/>
                                </group>
                                <group string="Bậc 5 (> 100tr)">
                                    <field name="bac_5_thue_suat"/>
                                    <field name="bac_5_tru" widget="monetary"/>
                                </group>
                            </group>
                        </page>
                        <page string="Bảo Hiểm" name="bao_hiem">
                            <group>
                                <group string="Tỷ Lệ (%)">
                                    <field name="ty_le_bhxh"/>
                                    <field name="ty_le_bhyt"/>
                                    <field name="ty_le_bhtn"/>
                                </group>
                                <group string="Tổng Kết">
                                    <field name="tong_ty_le_bao_hiem" readonly="1" 
                                           style="font-weight: bold;"/>
                                </group>
                            </group>
                        </page>
                        <page string="Giảm Trừ &amp; Miễn Thuế" name="giam_tru">
                            <group>
                                <group>
                                    <field name="giam_tru_gia_canh" widget="monetary"/>
                                    <field name="phu_cap_an_trua_mien_thue" widget="monetary"/>
                                </group>
                            </group>
                        </page>
                        <page string="Ghi Chú" name="ghi_chu">
                            <field name="ghi_chu"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_cau_hinh_luong_search" model="ir.ui.view">
        <field name="name">cau.hinh.luong.search</field>
        <field name="model">cau_hinh_luong</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="thang"/>
                <field name="nam"/>
                <filter string="Active" name="filter_active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="filter_inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Năm" name="group_nam" context="{'group_by': 'nam'}"/>
                    <filter string="Tháng" name="group_thang" context="{'group_by': 'thang'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_cau_hinh_luong" model="ir.actions.act_window">
        <field name="name">Cấu Hình Lương</field>
        <field name="res_model">cau_hinh_luong</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_filter_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo cấu hình lương mới
            </p>
            <p>
                Cấu hình các thông số tính lương cho từng tháng: thuế TNCN, bảo hiểm, giảm trừ gia cảnh.
                Khi luật thay đổi, chỉ cần cập nhật cấu hình thay vì sửa code.
            </p>
        </field>
    </record>
</odoo>
